{{#slate}}
    <div class="live-stream__slate">
        <div class="live-stream__slate-wrapper">
            {{#.title}}
                <h3 class="live-stream__slate-title">{{.}}</h3>
            {{/.title}}

            {{#.description}}
                <div class="live-stream__slate-description">{{.}}</div>
            {{/.description}}

            {{#.button}}
                <div class="live-stream__slate-button">{{.title}}</div>
            {{/.button}}
        </div>
    </div>
{{/slate}}